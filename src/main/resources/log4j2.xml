<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info">
    <Appenders>
        <Console name="stdout" target="SYSTEM_OUT">
            <PatternLayout pattern="[%d{yyyy/MM/dd HH:mm:ss}][%p][%C-%L] %m%n"/>
        </Console>

        <RollingFile name="dailyFile" fileName="D:/SYI/CGA105G2/log/dailyFile.log"
                     filePattern="D:/SYI/CGA105G2/log/dailyFile-%d{yyyy-MM-dd}.log">
            <PatternLayout>
                <Pattern>[%d{yyyy/MM/dd HH:mm:ss}][%p][%C-%L] %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <!-- 日誌滾動策略-->
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
            <!-- append 預設就是 true，往後增加，false則是覆蓋 -->
            <!-- <append>true</append> -->
        </RollingFile>

        <RollingFile name="errFile" fileName="D:/SYI/CGA105G2/log/errFile.log"
                     filePattern="D:/SYI/CGA105G2/log/errFile-%d{yyyy-MM-dd}-%i.log">
            <PatternLayout>
                <Pattern>[%d{yyyy/MM/dd HH:mm:ss}][%p][%C-%L] %m%n</Pattern>
            </PatternLayout>
            <ThresholdFilter level="error"/>
            <Policies>
                <!-- 日誌滾動策略-->
                <SizeBasedTriggeringPolicy size="2 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="5"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="stdout"/>
            <AppenderRef ref="dailyFile"/>
            <AppenderRef ref="errFile"/>
        </Root>
    </Loggers>
</Configuration>